<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AyudaScreenFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingTop="40dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/redrosemedium"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Ayuda"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/pregunta1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/redrosemedium"
                    android:text="Mi rutina no se visualiza: "
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_pregunta1"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Cierre la aplicación y vuelve a iniciarla"
                    app:layout_constraintBottom_toBottomOf="@+id/pregunta1"
                    app:layout_constraintStart_toEndOf="@+id/pregunta1"
                    app:layout_constraintTop_toTopOf="@+id/pregunta1"
                    app:layout_constraintVertical_bias="0.181" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/ayuda2"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/redrosemedium"
                    android:text="Quiero una rutina mas personalizada: "
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_ayuda2"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Comunicate al correo berserker@gmail.com"
                    app:layout_constraintBottom_toBottomOf="@+id/ayuda2"
                    app:layout_constraintStart_toEndOf="@+id/ayuda2"
                    app:layout_constraintTop_toTopOf="@+id/ayuda2"
                    app:layout_constraintVertical_bias="0.181" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/ayuda3"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/redrosemedium"
                    android:text="Ingrese mal mis datos:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_ayuda3"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="En el apartado de perfil puede modificar tu información"
                    app:layout_constraintBottom_toBottomOf="@+id/ayuda3"
                    app:layout_constraintStart_toEndOf="@+id/ayuda3"
                    app:layout_constraintTop_toTopOf="@+id/ayuda3"
                    app:layout_constraintVertical_bias="0.181" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>